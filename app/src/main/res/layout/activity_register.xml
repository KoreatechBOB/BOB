<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEDE3">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이름"
            android:textSize="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_edit"
            android:singleLine="true"
            android:id="@+id/regi_name"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="닉네임"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_edit"
            android:singleLine="true"
            android:id="@+id/regi_nickname"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_edit"
            android:singleLine="true"
            android:id="@+id/regi_id"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_edit"
            android:inputType="textPassword"
            android:singleLine="true"
            android:id="@+id/regi_pass"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="생년월일"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="년 : "
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0000"
                android:textSize="20dp"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/birth_year"
                android:maxLength="4"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월 : "
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textSize="20dp"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/birth_month"
                android:maxLength="2"
                android:layout_marginRight="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일 : "
                android:textSize="20dp"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="00"
                android:textSize="20dp"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/birth_day"
                android:maxLength="2"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성별"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남"
                android:id="@+id/regi_male"
                android:onClick="onRadioButtonClick"
                android:layout_marginRight="50dp"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여"
                android:id="@+id/regi_female"
                android:onClick="onRadioButtonClick"/>

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="한줄소개"
            android:textSize="20dp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:paddingHorizontal="10sp"
            android:paddingVertical="10sp"
            android:background="@drawable/custom_edit"
            android:singleLine="true"
            android:id="@+id/regi_comment"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:text="프로필 사진"
            android:layout_marginTop="20dp"/>

        <ImageView
            android:layout_height="200dp"
            android:layout_width="200dp"
            android:id="@+id/user_image"
            android:src="@drawable/kakao_11"
            android:adjustViewBounds="true"
            android:maxWidth="200dp"
            android:maxHeight="200dp"
            android:layout_gravity="center"/>
        <Button
            android:layout_height="40dp"
            android:layout_width="100dp"
            android:text="사진 선택"
            android:textSize="20dp"
            android:background="@drawable/custom_button"
            android:id="@+id/select_pic"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록"
                android:textSize="20dp"
                android:background="@drawable/custom_button"
                android:id="@+id/regi"
                android:layout_gravity="bottom"
                android:layout_marginRight="50dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소"
                android:textSize="20dp"
                android:background="@drawable/custom_button"
                android:layout_gravity="bottom"
                android:id="@+id/regi_cancel"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>